<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingTop="12dp"
  android:paddingBottom="48dp"
  android:paddingLeft="24dp"
  android:paddingRight="24dp">

  <ImageView
    android:id="@+id/imageCover"
    android:layout_height="50dp"
    android:layout_width="50dp"
    android:scaleType="centerCrop"
    android:layout_marginLeft="12dp"
    android:layout_alignParentRight="true"
    android:contentDescription="Book cover" />

  <TextView
    android:id="@+id/textTitle"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_toLeftOf="@id/imageCover"
    android:layout_marginTop="-3dp"
    android:singleLine="true"
    android:textColor="@color/text_color_primary"
    android:text="Metamorphosis" />

  <TextView
    android:id="@+id/textAuthor"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_below="@id/textTitle"
    android:layout_toLeftOf="@id/imageCover"
    android:layout_marginTop="3dp"
    android:singleLine="true"
    android:textColor="@color/text_color_secondary"
    android:text="Franz Kafka" />

  <TextView
    android:id="@+id/textClosingRemark"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_below="@id/imageCover"
    android:layout_marginTop="9dp"
    android:background="@drawable/quote_background"
    android:paddingLeft="6dp"
    android:textSize="12dp"
    android:textColor="@color/text_color_secondary"
    android:text="â€“ Something something something something smething seomthjigs"
    android:typeface="serif" />

  <TextView
    android:id="@+id/textFinishedAt"
    style="@style/default_text"
    android:layout_below="@id/textClosingRemark"
    android:layout_marginTop="5dp"
    android:textSize="10dp"
    android:textColor="@color/text_color_secondary"
    android:text="Finished Nov 13th, 2012" />

</RelativeLayout>
