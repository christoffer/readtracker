<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="default_button">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:textSize">18dp</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:background">@drawable/default_button</item>
    <item name="android:textColor">@color/text_color_primary</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="default_button_primary_action" parent="default_button">
    <item name="android:background">@drawable/slate_3dp</item>
  </style>

  <style name="default_toggle_button" parent="default_button">
    <item name="android:textColor">@color/text_color_primary_subtle</item>
    <item name="android:drawableLeft">@drawable/toggle_on_off</item>
    <item name="android:paddingLeft">12dp</item>
    <item name="android:drawablePadding">-12dp</item>
  </style>

  <style name="reading_session_wheel_view">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:layout_marginLeft">12dp</item>
    <item name="android:layout_marginRight">12dp</item>
  </style>

  <style name="generic_number_wheel">
    <item name="android:minHeight">48dp</item>
    <item name="android:minWidth">48dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="default_button_dangerous" parent="default_button">
    <item name="android:background">@drawable/selector_button_dangerous</item>
  </style>

  <style name="button_small">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/action_button</item>
    <item name="android:paddingLeft">16dip</item>
    <item name="android:paddingRight">16dip</item>
    <item name="android:paddingTop">8dip</item>
    <item name="android:paddingBottom">8dip</item>
    <item name="android:textColor">@color/state_sensitive_text</item>
    <item name="android:textSize">16dp</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- regular input fields -->
  <style name="default_input_field">
    <item name="android:background">@drawable/default_input_field</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:minLines">1</item>
    <item name="android:paddingLeft">12dip</item>
    <item name="android:paddingRight">12dip</item>
    <item name="android:textSize">16dp</item>
    <item name="android:textColor">@color/state_sensitive_text</item>
    <item name="android:textColorHint">@color/text_color_secondary</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:inputType">text</item>
    <item name="android:text"/>
  </style>

  <!-- large, centered, input filed that expands when more text is entered -->
  <style name="centered_number_input_field" parent="default_input_field">
    <item name="android:background">@drawable/default_input_field</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:inputType">number</item>
    <item name="android:textSize">72dp</item>
    <item name="android:maxLength">4</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
  </style>

  <style name="ReadTrackerTitle">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="progress_bar">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">4dip</item>
    <item name="android:max">100</item>
    <item name="android:progress">0</item>
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/progress_bar_reading</item>
    <item name="android:layout_marginTop">12dp</item>
    <item name="android:layout_marginBottom">12dp</item>
  </style>

  <style name="cover_image">
    <item name="android:layout_marginRight">13dip</item>
    <item name="android:layout_width">67dip</item>
    <item name="android:layout_height">67dip</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:background">@android:color/darker_gray</item>
  </style>

  <style name="single_line_text">
    <item name="android:textColor">@color/text_color_primary</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:focusable">false</item>
  </style>

  <style name="single_line_author" parent="single_line_text">
    <item name="android:layout_marginTop">3dip</item>
    <item name="android:textColor">@color/text_color_primary</item>
  </style>

  <style name="single_line_title" parent="single_line_text">
    <item name="android:layout_marginTop">-3dip</item>
  </style>

  <style name="title_big" parent="single_line_title">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="author_big" parent="single_line_author">
    <item name="android:textSize">16sp</item>
  </style>


  <style name="generic_label">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">6dp</item>
    <item name="android:layout_marginBottom">6dp</item>
    <item name="android:textSize">14dp</item>
    <item name="android:textColor">@color/text_color_secondary</item>
  </style>

  <style name="dummy_layout">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:layout_marginLeft">13dp</item>
    <item name="android:layout_marginRight">13dp</item>
  </style>

  <style name="small_heading_text" parent="single_line_text"/>

  <style name="small_content_text" parent="single_line_text">
    <item name="android:textColor">@color/text_color_secondary</item>
    <item name="android:singleLine">false</item>
    <item name="android:lineSpacingMultiplier">1.3</item>
  </style>

  <style name="round_tracker_button">
    <item name="android:layout_width">128dp</item>
    <item name="android:layout_height">128dp</item>
    <item name="android:background">@drawable/selector_oval_background</item>
    <item name="android:layout_marginTop">105dp</item>
    <item name="android:layout_marginLeft">35dp</item>
  </style>

  <style name="small_round_button">
    <item name="android:layout_width">75dp</item>
    <item name="android:layout_height">75dp</item>
    <item name="android:background">@drawable/selector_oval_background</item>
    <item name="android:layout_marginTop">-45dp</item>
    <item name="android:scaleType">fitXY</item>
    <item name="android:padding">15dp</item>
    <item name="android:visibility">invisible</item>
  </style>

  <style name="fill_width">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="text_colon">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:text">:</item>
    <item name="android:textSize">50dp</item>
    <item name="android:textColor">@color/text_color_primary</item>
  </style>

  <style name="pager_title_text">
    <item name="android:textSize">12sp</item>
    <item name="android:layout_marginTop">0dp</item>
    <item name="android:layout_marginBottom">0dp</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="pager_arrow">
    <item name="android:layout_height">20dp</item>
    <item name="android:layout_width">10dp</item>
    <item name="android:scaleType">fitXY</item>
  </style>

  <style name="pager_title">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">30dp</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:background">@color/midnight_medium</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="large_text_header">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_gravity">left|center_vertical</item>
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/text_color_primary</item>
  </style>

  <style name="large_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">40dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/text_color_primary</item>
  </style>

  <style name="thick_divider">
    <item name="android:background">@color/midnight_dark</item>
    <item name="android:layout_below">@+id/layoutEndingPage</item>
    <item name="android:layout_height">2px</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_marginBottom">13dp</item>p"
  </style>

  <style name="summary_text">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:textSize">12dp</item>
    <item name="android:singleLine">true</item>
    <item name="android:textColor">@color/text_color_primary</item>
  </style>

  <style name="divider">
    <item name="android:background">@color/midnight_dark</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">12dp</item>
    <item name="android:textColor">@color/text_color_primary</item>
    <item name="android:paddingTop">2dp</item>
    <item name="android:paddingBottom">2dp</item>
  </style>

  <!-- a small, square, action button much like the buttons on the action bar
  in later versions of android -->
  <style name="action_button">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_gravity">right|center_vertical</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:background">@drawable/action_button</item>
    <item name="android:textColor">@color/text_color_primary</item>
    <item name="android:text"></item>
  </style>

  <style name="inline_input_field_button" parent="action_button">
    <item name="android:layout_width">48dp</item>
    <item name="android:layout_gravity">right|center_vertical</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:background">@drawable/inverted_action_button</item>
  </style>

  <!-- style for the little tab headers that sits on top of fragments -->
  <style name="pager_headers">
    <item name="android:layout_height">24dp</item>
    <item name="footerLineHeight">1dp</item>
    <item name="footerIndicatorHeight">2dp</item>
    <!--<item name="footerColor">@color/text_color_primary</item>-->
    <item name="footerColor">@color/midnight_ultralight</item>
    <item name="topPadding">0dp</item>
    <item name="titlePadding">12dp</item>
    <item name="footerPadding">6dp</item>
    <item name="clipPadding">12dp</item>
    <item name="textSize">14dp</item>
    <item name="android:background">@color/midnight_dark</item>
    <item name="android:layout_width">fill_parent</item>
  </style>

  <!--
  flipper at the bottom of the screen that switches between two sets of
  buttons
  -->
  <style name="flipper_action_buttons">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inAnimation">@anim/slide_up_appear</item>
    <item name="android:outAnimation">@anim/slide_down_disappear</item>
  </style>

  <!-- style for a generic activity header -->
  <style name="activity_header">
    <item name="android:layout_height">48dp</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_alignParentTop">true</item>
    <item name="android:background">@color/midnight_dark</item>
  </style>

  <!-- styling of the logo in a generic header -->
  <style name="activity_header_logo">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:layout_alignParentLeft">true</item>
    <item name="android:scaleType">centerInside</item>
    <item name="android:layout_gravity">left</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:src">@drawable/logo_readtracker</item>
  </style>

  <style name="reading_session_text_active">
    <item name="android:textSize">40dp</item>
    <item name="android:textStyle">normal</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">#ff48585d</item>
    <item name="android:paddingTop">6dp</item>
    <item name="android:paddingBottom">6dp</item>
  </style>

  <style name="reading_session_text_passive" parent="reading_session_text_active">
    <item name="android:textSize">24dp</item>
    <item name="android:textColor">#ff273134</item>
  </style>
</resources>
