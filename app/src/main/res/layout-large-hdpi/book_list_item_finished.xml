<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:paddingTop="12dp"
  android:paddingBottom="24dp"
  android:paddingLeft="24dp"
  android:paddingRight="24dp">

  <ImageView
    android:id="@+id/imageCover"
    android:layout_height="50dp"
    android:layout_width="50dp"
    android:scaleType="centerCrop"
    android:layout_marginLeft="12dp"
    android:layout_alignParentRight="true"
    android:contentDescription="Book cover" />

  <TextView
    android:id="@+id/textTitle"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_toLeftOf="@id/imageCover"
    android:layout_marginTop="-3dp"
    android:textColor="@color/text_color_primary"
    tools:text="Metamorphosis" />

  <TextView
    android:id="@+id/textAuthor"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_below="@id/textTitle"
    android:layout_toLeftOf="@id/imageCover"
    android:layout_marginTop="3dp"
    android:textColor="@color/text_color_secondary"
    tools:text="Franz Kafka" />

  <TextView
    android:id="@+id/textClosingRemark"
    style="@style/default_text"
    android:layout_width="fill_parent"
    android:layout_below="@id/imageCover"
    android:layout_marginTop="3dp"
    android:background="@drawable/quote_background"
    android:paddingLeft="12dp"
    android:textSize="14sp"
    android:textColor="@color/text_color_secondary"
    tools:text="â€“ Something something something something smething seomthjigs"
    />

  <TextView
    android:id="@+id/textFinishedAt"
    style="@style/default_text"
    android:layout_below="@id/textClosingRemark"
    android:layout_marginTop="12dp"
    android:textSize="12sp"
    android:textColor="@color/text_color_secondary"
    android:text="Finished Nov 13th, 2012" />

</RelativeLayout>
