<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="default_button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingTop">18dp</item>
    <item name="android:paddingBottom">18dp</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:textSize">@dimen/textSizeMedium</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="non_primary_button" parent="default_button">
    <item name="android:textSize">14sp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:paddingLeft">18dp</item>
    <item name="android:paddingRight">18dp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="generic_number_wheel">
    <item name="android:minHeight">48dp</item>
    <item name="android:minWidth">96dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <!-- regular input fields -->
  <style name="default_input_field">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">48dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:minLines">1</item>
    <item name="android:paddingLeft">@dimen/halfGridGutter</item>
    <item name="android:paddingRight">@dimen/halfGridGutter</item>
    <item name="android:paddingTop">3dp</item>
    <item name="android:paddingBottom">3dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:inputType">text</item>
  </style>

  <!-- large, centered, input filed that expands when more text is entered -->
  <style name="centered_number_input_field" parent="default_input_field">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:inputType">number</item>
    <item name="android:maxLength">6</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:paddingBottom">16dp</item>
    <item name="android:paddingLeft">@dimen/halfGridGutter</item>
    <item name="android:paddingRight">@dimen/halfGridGutter</item>
  </style>

  <style name="progress_bar">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">4dip</item>
    <item name="android:max">100</item>
    <item name="android:progress">0</item>
    <item name="android:indeterminateOnly">false</item>
    <item name="android:progressDrawable">@drawable/progress_bar_reading</item>
    <item name="android:layout_marginTop">12dp</item>
    <item name="android:layout_marginBottom">12dp</item>
  </style>

  <style name="cover_image">
    <item name="android:layout_width">67dip</item>
    <item name="android:layout_height">67dip</item>
    <item name="android:scaleType">centerCrop</item>
    <item name="android:layout_alignParentLeft">true</item>
    <!--<item name="android:background">@android:color/darker_gray</item>-->
  </style>

  <style name="single_line_text">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:singleLine">true</item>
    <item name="android:ellipsize">end</item>
    <item name="android:focusable">false</item>
  </style>

  <style name="single_line_author" parent="single_line_text">
    <item name="android:layout_marginTop">3dip</item>
  </style>

  <style name="single_line_title" parent="single_line_text">
    <item name="android:layout_marginTop">-3dip</item>
  </style>

  <style name="text_blank_state">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/textSizeMedium</item>
    <item name="android:paddingLeft">24dp</item>
    <item name="android:paddingRight">24dp</item>
    <item name="android:lineSpacingMultiplier">1.5</item>
    <item name="android:visibility">gone</item>
  </style>

  <style name="pager_tab_strip">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">top</item>
    <item name="android:padding">8dp</item>
    <item name="android:textSize">14sp</item>
  </style>

  <!-- a small, square, action button much like the buttons on the action bar
  in later versions of android -->

  <!--
  flipper at the bottom of the screen that switches between two sets of
  buttons
  -->
  <style name="flipper_action_buttons">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:inAnimation">@anim/slide_up_appear</item>
    <item name="android:outAnimation">@anim/slide_down_disappear</item>
  </style>

  <!-- style for normal text usage -->

  <style name="default_text">
    <item name="android:textSize">@dimen/textSizeMedium</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="ui_hint">
    <item name="android:textSize">@dimen/textSizeSmall</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="free_text_input">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:typeface">serif</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">@dimen/textSizeMedium</item>
    <item name="android:padding">24dp</item>
    <item name="android:inputType">text|textCapSentences|textAutoCorrect|textMultiLine</item>
    <item name="android:gravity">fill_horizontal</item>
  </style>

  <style name="number_picker_style">
    <item name="android:textSize">@dimen/textSizeLarge</item>
  </style>
</resources>
