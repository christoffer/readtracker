<resources>

  <style name="ReadTrackerTheme" parent="@android:style/Theme.Holo">
    <item name="textAppearance">@style/TextAppearance</item>
    <item name="android:actionBarStyle">@style/ReadTrackerActionBar</item>
    <item name="android:windowBackground">@color/activity_background</item>

    <item name="actionBarStyle">@style/ReadTrackerActionBar</item>
  </style>

<style name="ReadTrackerDialog" parent="@style/ReadTrackerTheme.NoActionBar">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
</style>

  <style name="ReadTrackerTheme.NoActionBar" parent="@style/ReadTrackerTheme">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>

    <item name="windowActionBar">false</item>
  </style>

  <style name="ReadTrackerActionBar" parent="@style/Widget.AppCompat.ActionBar">
    <item name="android:titleTextStyle">@style/ActionBarText</item>
    <item name="android:background">@color/activity_background</item>
    <item name="android:displayOptions">showTitle</item>

    <item name="titleTextStyle">@style/ActionBarText</item>
    <item name="background">@color/activity_background</item>
    <item name="displayOptions">showTitle</item>
  </style>

  <style name="ActionBarText"
         parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
    <item name="android:textColor">@color/actionbar_text</item>
  </style>

</resources>
